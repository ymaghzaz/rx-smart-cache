{
  "rules": {
    "semi": [2, "always"],
    "no-console": 0,
    "no-trailing-spaces": 2,
    "no-irregular-whitespace": 2,
    "camelcase": 2,
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "no-unused-vars": [2, { "vars": "local" }]
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018
  }
}
